/* components/authorize/authorize.wxss (完整紧凑版) */

/* =============================================== */
/* 1. 授权覆盖层容器 (全屏) */
/* =============================================== */
.auth-overlay-fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  
  background-color: rgba(0, 0, 0, 0.65);
  
  display: flex;
  justify-content: center;
  align-items: center;
  
  z-index: 10000;
}

/* =============================================== */
/* 2. 授权表单卡片 (模态框主体) - 缩小 */
/* =============================================== */
.auth-form-card-compact {
  background-color: white;
  padding: 40rpx 30rpx 30rpx; 
  border-radius: 20rpx; 
  width: 90%; 
  max-width: 550rpx; 
  
  max-height: 85vh; 
  overflow-y: auto; 
  
  display: flex;
  flex-direction: column;
  align-items: center;
  
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  
  /* 动画效果 */
  animation: fadeInScale 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  margin-top: 130rpx;
}

/* 标题和副标题 - 缩小 */
.title-main-compact {
  font-size: 34rpx; 
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}
.title-sub-compact {
  font-size: 24rpx; 
  color: #999;
  margin-bottom: 30rpx; 
}

/* =============================================== */
/* 3. 头像选择/展示样式 */
/* =============================================== */

/* 第一步：核心按钮容器 (可点击选择) */
.avatar-auth-btn-compact {
  background: none;
  line-height: 1; 
  padding: 0;
  margin: 15rpx 0 5rpx 0; 
  
  width: 120rpx !important; 
  height: 120rpx !important; 
  border-radius: 50% !important;
  
  position: relative; 
  overflow: hidden; 
  border: 3rpx solid #e0e0e0;
}

/* 头像图片 (第一步和第二步通用图片样式) */
.avatar-auth-img-compact {
  width: 100% !important;
  height: 100% !important;
  border-radius: 50% !important; 
  object-fit: cover; 
  display: block;
}

/* 第二步：头像图片展示 (不可点击) */
.avatar-auth-img-compact-display {
  width: 120rpx !important; 
  height: 120rpx !important; 
  border-radius: 50% !important;
  object-fit: cover; 
  display: block;
  margin: 15rpx 0 5rpx 0; 
  border: 3rpx solid #e0e0e0;
}

/* 提示文本 - 缩小 (仅第一步需要) */
.avatar-hint-compact {
  font-size: 22rpx; 
  color: #4a90e2; 
  margin-top: 10rpx;
  margin-bottom: 20rpx; 
  display: block; 
}

/* =============================================== */
/* 4. 昵称输入/展示样式 */
/* =============================================== */
/* 昵称输入/展示外部容器 */
.input-group-center-compact {
  width: 100%;
  padding: 15rpx 0; 
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx; 
  display: flex;
  align-items: center;
  justify-content: center; /* 确保居中对齐 */
}

/* 第一步：昵称输入框 */
.input-field-center-compact {
  width: 100%;
  text-align: center;
  font-size: 30rpx; 
  padding: 3rpx 0;
}

/* 第二步：昵称展示文本 */
.input-field-center-compact-text {
  width: 100%;
  text-align: center;
  font-size: 30rpx; 
  padding: 3rpx 0;
  color: #333; 
  min-height: 1.3em;
  line-height: 1.3em;
}


/* =============================================== */
/* 5. 信息输入/选择组通用样式 (紧凑) */
/* =============================================== */

/* 统一输入框、选择器、单选组的容器样式 */
.info-group-compact {
  width: 100%;
  padding: 15rpx 0; 
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.info-group-compact.last-group {
  border-bottom: none;
  margin-bottom: 10rpx;
}

/* 标签样式 (如：性别、年龄) - 缩小 */
.info-label-compact {
  width: 170rpx; 
  font-size: 28rpx; 
  color: #666;
  flex-shrink: 0; 
  text-align: left;
}

/* 输入框样式 - 缩小 */
.info-input-field-compact {
  flex: 1; 
  text-align: right; 
  font-size: 28rpx; 
  color: #333;
  min-height: 1.3em; 
  line-height: 1.3em;
  padding: 0;
}

/* 选择器容器 */
.info-group-compact picker {
  flex: 1;
  display: flex; 
  justify-content: flex-end; 
}

/* 选择器显示值样式 - 缩小 */
.info-value-compact {
  font-size: 28rpx; 
  color: #333;
  padding: 0;
  min-height: 1.3em; 
  line-height: 1.3em;
}

/* 提示文本颜色 */
.info-value-compact:empty::before {
  content: attr(placeholder);
  color: #999;
}

/* ----------------------------------------------- */
/* 5.1 单选按钮组样式 (用于性别和全日制) */
/* ----------------------------------------------- */
.radio-group-compact {
  flex: 1;
  display: flex;
  justify-content: flex-end; 
  align-items: center;
}

.radio-item-compact {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.radio-item-compact text {
  margin-right: 10rpx;
}

.radio-dot {
  width: 32rpx; 
  height: 32rpx;
  border-radius: 50%;
  border: 1rpx solid #ccc;
  position: relative;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.radio-dot.checked {
  border-color: #4a90e2; 
}

.radio-dot.checked::after {
  content: '';
  display: block;
  width: 18rpx; 
  height: 18rpx;
  border-radius: 50%;
  background-color: #4a90e2; 
}

/* ----------------------------------------------- */
/* 5.2 简历上传按钮样式 - 缩小 */
/* ----------------------------------------------- */
.resume-upload-btn-compact {
  flex: 1;
  height: 60rpx; 
  line-height: 60rpx; 
  font-size: 26rpx; 
  text-align: center;
  background-color: #f8f8f8;
  color: #4a90e2;
  border-radius: 6rpx;
  margin: 0;
  padding: 0 15rpx;
  border: 1rpx solid #e0e0e0;
}

/* =============================================== */
/* 6. 提交登录按钮 - 缩小 */
/* =============================================== */

.login-submit-btn-compact {
  margin-top: 30rpx; 
  width: 80%; /* 调整为固定宽度以保持美观 */
  box-shadow: none;
  border: none;
  
  height: 80rpx; 
  line-height: 80rpx; 
  font-size: 30rpx; 
  
  padding: 0 30rpx; 
  
  border-radius: 40rpx; 
  background-color: #4a90e2;
  color: #fff;
  transition: background-color 0.2s;
}

.login-submit-btn-compact[disabled] {
  background-color: #bbbbbb;
  color: #f0f0f0;
}

/* 动画效果 */
@keyframes fadeInScale {
  0% {
      opacity: 0;
      transform: scale(0.95);
  }
  100% {
      opacity: 1;
      transform: scale(1);
  }
}