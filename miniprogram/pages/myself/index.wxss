/* =================================================== */
/* GLOBAL/CONTAINER STYLES */
/* =================================================== */
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* Background Image Container (z-index 0) */
.background-image-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 0;
  height: 600rpx;
  /* Height for top area */
  overflow: hidden;
}

.background-image {
  width: 100%;
  height: auto;
}

/* =================================================== */
/* USER CARD AREA (z-index 10) */
/* =================================================== */
.user-card {
  /* padding-top åœ¨ wxml ä¸­åŠ¨æ€è®¾ç½® */
  padding-right: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 40rpx;
  background: transparent;
  position: relative;
  z-index: 10;
  margin-bottom: 24rpx;
}

.user-main-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  margin-top: 80rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  flex-shrink: 0;
}

.name-phone {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  min-width: 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

.user-phone.empty-text {
  color: #999;
}

.nav-buttons {
  display: flex;
  flex-shrink: 0;
}

.nav-button {
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
  z-index: 10;
}

.nav-icon {
  width: 35rpx;
  height: 35rpx;
}

.vip-banner {
  width: 100%;
  font-size: 0;
}

.vip-banner-img {
  width: 100%;
  border-radius: 20rpx;
}

/* =================================================== */
/* PET SECTION STYLES */
/* =================================================== */
.pets-section {
  padding: 0 40rpx;
  margin-bottom: 30rpx;
  position: relative;
  padding-top: 40rpx;
  background-color: #f7f8fa;
  z-index: 10;
}

.meow-bubble {
  position: absolute;
  top: -60rpx;
  left: 110rpx;
  width: 380rpx;
  height: 160rpx;
  z-index: 11;
}

.pets-list-container {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
}

/* Single Pet Card Style */
.pet-card {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  min-height: 148rpx;
  background-color: #fff;
}

.pets-list-container .pet-card:not(:first-child) {
  border-top: 1rpx solid #f5f5f5;
}

.pet-card__avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.pet-card__details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.pet-card__name-line {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.pet-card__name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.pet-card__gender {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.pet-card__desc {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pet-card__button {
  padding: 6rpx 30rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #3A77F6;
  border-radius: 999rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

/* Pet List Footer */
.pet-list-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  padding: 10rpx 0;
  background-color: #fff;
  border-top: 1rpx solid #f5f5f5;
}

.footer-left-placeholder,
.footer-right-link {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.footer-left-placeholder {
  padding-left: 40rpx;
}

.footer-right-link {
  padding-right: 40rpx;
}

.expand-toggle {
  display: flex;
  align-items: center;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.expand-text {
  color: #4a90e2;
  margin-right: 10rpx;
  transform: translateY(-20rpx);
  position: relative;
}

.expand-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.2s;
  flex-shrink: 0;
  transform: translateY(3rpx);
}

.expand-icon.rotate-up {
  transform: rotate(180deg) translateY(3rpx);
}

.view-all-link {
  color: #4a90e2;
  font-size: 26rpx;
}


/* =================================================== */
/* TAB SWITCHING AND CONTENT */
/* =================================================== */
.tabs-container {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  height: 90rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
  background-color: #f7f8fa;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
  align-items: flex-end;
  position: relative;
  z-index: 10;
}

.tab-header {
  font-size: 32rpx;
  color: #999999;
  font-weight: 500;
  margin-right: 60rpx;
  position: relative;
  padding-bottom: 15rpx;
  /* ç•™å‡ºæŒ‡ç¤ºå™¨ç©ºé—´ */
  transition: all 0.2s ease-in-out;
}

.tab-header.active {
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}

.tab-header.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 8rpx;
  background-color: #FFB700;
  border-radius: 4rpx;
}

.tab-content {
  padding: 0 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}


