/* =================================================== */
/* GLOBAL/CONTAINER STYLES */
/* =================================================== */
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* Background Image Container (z-index 0) */
.background-image-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 0;
  height: 600rpx;
  /* Height for top area */
  overflow: hidden;
}

.background-image {
  width: 100%;
  height: auto;
}

/* =================================================== */
/* USER CARD AREA (z-index 10) */
/* =================================================== */
.user-card {
  /* padding-top 在 wxml 中动态设置 */
  padding-right: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 40rpx;
  background: transparent;
  position: relative;
  z-index: 10;
  margin-bottom: 24rpx;
}

.user-main-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  margin-top: 80rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  flex-shrink: 0;
}

.name-phone {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  min-width: 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

.user-phone.empty-text {
  color: #999;
}

.nav-buttons {
  display: flex;
  flex-shrink: 0;
}

.nav-button {
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
  z-index: 10;
}

.nav-icon {
  width: 35rpx;
  height: 35rpx;
}

.vip-banner {
  width: 100%;
  font-size: 0;
}

.vip-banner-img {
  width: 100%;
  border-radius: 20rpx;
}

/* =================================================== */
/* PET SECTION STYLES */
/* =================================================== */
.pets-section {
  padding: 0 40rpx;
  margin-bottom: 30rpx;
  position: relative;
  padding-top: 40rpx;
  background-color: #f7f8fa;
  z-index: 10;
}

.meow-bubble {
  position: absolute;
  top: -60rpx;
  left: 110rpx;
  width: 380rpx;
  height: 160rpx;
  z-index: 11;
}

.pets-list-container {
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
}

/* Single Pet Card Style */
.pet-card {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  min-height: 148rpx;
  background-color: #fff;
}

.pets-list-container .pet-card:not(:first-child) {
  border-top: 1rpx solid #f5f5f5;
}

.pet-card__avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.pet-card__details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.pet-card__name-line {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.pet-card__name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.pet-card__gender {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.pet-card__desc {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pet-card__button {
  padding: 6rpx 30rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #3A77F6;
  border-radius: 999rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

/* Pet List Footer */
.pet-list-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  padding: 10rpx 0;
  background-color: #fff;
  border-top: 1rpx solid #f5f5f5;
}

.footer-left-placeholder,
.footer-right-link {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.footer-left-placeholder {
  padding-left: 40rpx;
}

.footer-right-link {
  padding-right: 40rpx;
}

.expand-toggle {
  display: flex;
  align-items: center;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.expand-text {
  color: #4a90e2;
  margin-right: 10rpx;
  transform: translateY(-20rpx);
  position: relative;
}

.expand-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.2s;
  flex-shrink: 0;
  transform: translateY(3rpx);
}

.expand-icon.rotate-up {
  transform: rotate(180deg) translateY(3rpx);
}

.view-all-link {
  color: #4a90e2;
  font-size: 26rpx;
}


/* =================================================== */
/* TAB SWITCHING AND CONTENT */
/* =================================================== */
.tabs-container {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  height: 90rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
  background-color: #f7f8fa;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
  align-items: flex-end;
  position: relative;
  z-index: 10;
}

.tab-header {
  font-size: 32rpx;
  color: #999999;
  font-weight: 500;
  margin-right: 60rpx;
  position: relative;
  padding-bottom: 15rpx;
  /* 留出指示器空间 */
  transition: all 0.2s ease-in-out;
}

.tab-header.active {
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}

.tab-header.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 8rpx;
  background-color: #FFB700;
  border-radius: 4rpx;
}

.tab-content {
  padding: 0 40rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}


/* =================================================== */
/* MY DELIVERY LIST (DELIVERY-LIST) 样式补充 */
/* =================================================== */
.delivery-list {
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}

.delivery-item {
  display: flex;
  align-items: flex-start;
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

/* Left Image Container (170x170rpx) */
.delivery-img-wrap {
  position: relative;
  width: 170rpx;
  height: 170rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
  overflow: hidden;
}

.delivery-img {
  width: 100%;
  height: 100%;
}

/* 移除状态标签的容器和内容，保持图片区域干净 */
.delivery-img-status {
  display: none; 
}


/* Right Details - 沿用 activity-details */
.delivery-details {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 170rpx;
  padding-top: 4rpx;
}

/* 投递标题 - 沿用 activity-title */
.delivery-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
  width: 100%;

  /* === 单行截断的关键三件套 === */
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 详细信息行 */
.delivery-info-line {
  display: flex;
  align-items: flex-start; /* 保持图标和第一行文字顶部对齐 */
  font-size: 20rpx;
  color: #999;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

/* 投递时间/类型/薪资文本 */
.delivery-time, .delivery-type, .delivery-salary {
  font-size: 20rpx;
  color: #999;
  /* 避免长文字对齐问题 */
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 职位职责描述（需要多行截断或单行截断） */
.delivery-desc {
  font-size: 20rpx;
  color: #999;
  flex-grow: 1; /* 占据剩余空间 */
  min-width: 0; /* 确保在 flex 容器内可以正确截断 */
  
  /* ⭐ 两行截断样式 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; /* 限制两行 */
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 统一文本图标的公共样式 */
.activity-info-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  flex-shrink: 0;
  
  /* 文本图标的共同特性 */
  font-size: 24rpx; 
  line-height: 1.2; /* 调整行高确保居中 */
  text-align: center;
  /* 确保文本图标在 flex 中不会被压缩 */
  display: flex; 
  justify-content: center;
  align-items: center;
}

/* 1. 时间图标 (📅) */
.time-icon {
  color: #4A90E2; /* 蓝色，像日历 */
}

/* 2. 类型图标 (🏷️) */
.type-icon {
  color: #FFA500; /* orange for tag/type */
}

/* 3. 薪资图标 (💰) */
.salary-icon {
  color: #FFB700;
}

/* 4. 职位职责图标 (✍️) */
.job-duty-icon {
  color: #3A77F6;
}


