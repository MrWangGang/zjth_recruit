/* 页面整体背景和滚动样式 */
.container {
  height: 100vh; /* 撑满屏幕高度 */
  background-color: #f0f2f5; /* 柔和的浅灰色背景 */
  padding-bottom: 20rpx; /* 底部留白 */
}

/* 头部样式 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 40rpx; /* 顶部和底部增加留白 */
  background: linear-gradient(135deg, #a8dadc 0%, #457b9d 100%); /* 标题背景渐变 */
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 柔和阴影，增加层次感 */
  position: relative; /* 为可能添加的背景纹理做准备 */
  overflow: hidden; /* 确保背景渐变或纹理不会超出 */
}

/* 顶部标题质感优化 */
.title {
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'microsoft yahei', Arial, sans-serif; /* 字体更现代 */
  font-size: 56rpx; /* 增大标题字号 */
  font-weight: bold;
  color: #fff; /* 白色字体，在高对比度背景下更醒目 */
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3); /* 文字阴影，增加质感 */
  letter-spacing: 4rpx; /* 增加字间距 */
  margin-bottom: 15rpx;
  /* 可以尝试添加背景裁剪文字效果，但小程序支持有限，这里先用文字阴影 */
}

.subtitle {
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'microsoft yahei', Arial, sans-serif;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85); /* 浅白色，与主标题区分 */
  text-shadow: 1rpx 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 照片网格布局 */
.photo-grid {
  display: flex;
  flex-wrap: wrap; /* 允许换行 */
  justify-content: space-around; /* 左右对齐，项目之间有间隔 */
  padding: 0 20rpx; /* 左右内边距 */
}

.photo-card {
  width: calc(50% - 30rpx); /* 一行两张，减去间隔 */
  margin-bottom: 30rpx; /* 图片之间的垂直间距 */
  background-color: #fff; /* 卡片背景色（实际上会被图片覆盖） */
  border-radius: 16rpx; /* 卡片圆角 */
  overflow: hidden; /* 确保图片圆角 */
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12); /* 更明显的阴影，增加卡片浮动感 */
  /* 移除内边距，让图片铺满 */
  position: relative; /* 为图片铺满卡片做准备 */
}

.photo-card:nth-child(odd) {
  margin-right: 20rpx; /* 奇数项右侧间隔 */
}

.photo-card:nth-child(even) {
  margin-left: 10rpx; /* 偶数项左侧间隔，调整以平衡布局 */
}

.photo {
  width: 100%;
  height: 380rpx; /* 固定图片高度，根据需要调整 */
  display: block; /* 移除图片底部可能的小间隙 */
  object-fit: cover; /* 保持图片比例，裁剪超出部分，完美铺满 */
  border-radius: 16rpx; /* 图片和卡片圆角保持一致 */
}