/* pages/job_detail/index.wxss 样式 */

/* ------------------- 全局和布局 ------------------- */
.container { 
  padding: 0 0 0; /* 移除左右内边距，让卡片全宽 */
}

/* ⭐ 顶部主卡片容器 (Flex 1:1 分割) */
.job-main-card {
  display: flex;
  padding: 40rpx;
  background-color: #f7f7f7; /* 浅背景色 */
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* ⭐ 图片容器 (1:1 保持宽高比) */
.job-main-media {
  width: 50%;
  padding-bottom: 50%; /* 利用 padding-bottom 实现 1:1 宽高比 */
  height: 0;
  position: relative;
  margin-right: 30rpx;
  flex-shrink: 0;
  overflow: hidden;
  border-radius: 12rpx;
}

.job-header-img { 
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* ⭐ 信息区 */
.job-header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.job-title { 
  font-size: 38rpx; 
  font-weight: bold;
  color: rgb(116, 109, 109);
  line-height: 1.3;
}

.job-type-tag { 
  padding: 6rpx 6rpx;
  border-radius: 20rpx; 
  font-size: 30rpx; 
  margin-top: -50rpx;
  margin-bottom: 10rpx;
  color: rgb(57, 184, 53);

}

.job-id-text {
  font-size: 24rpx;
  color: rgb(138, 53, 53);
}

/* ------------------- 描述分块区 ------------------- */

.detail-sections-wrap {
  padding: 30rpx 40rpx;
}

.section-container { 
  margin-bottom: 40rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx dashed #eee;
}

.section-title { 
  font-size: 32rpx; 
  font-weight: bold;
  color: #004d40; /* 深绿色，突出标题 */
  margin-bottom: 2rpx; 
  display: block; 
  margin-top: 10rpx;
}

.job-description-content { 
  font-size: 28rpx; 
  color: #555; 
  line-height: 1.8; 
  
  /* ⭐ 关键：保留 JS 中注入的换行符 */
  white-space: pre-wrap; 
  display: block; 
  padding-top: 10rpx; /* 与标题分离 */
}

/* ------------------- 底部状态和按钮 ------------------- */

.delivery-status-text { 
  font-size: 28rpx; 
  font-weight: 600; 
  margin-top: 15rpx;
  display: block;
}
.status-delivered { 
  color: #2e7d32; /* 绿色 */
}
.status-pending { 
  color: #ff9800; /* 橙色 */
}

.fixed-bottom-bar { 
  position: fixed; 
  bottom: 0; 
  left: 0; 
  right: 0; 
  padding: 50rpx 40rpx; 
  background: white; 
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05); 
  z-index: 10;
}
.deliver-button { 
  background-color: #4a90e2; 
  color: white; 
  border-radius: 14rpx; 
  height: 88rpx; 
  line-height: 55rpx; 
  font-size: 34rpx;
  width: 600rpx !important;
}
.status-new {
  background-color: #4a90e2 !important; /* 蓝色，首次投递 */
}

/* 按钮禁用状态 (未登录) */
.deliver-button[disabled] {
  background-color: #ccc !important;
  pointer-events: none;
}
/* ⭐ 关键：新增 重复投递 的样式 */
.status-repeat {
  background-color: #ff9800 !important; /* 橙色，表示重复操作 */
  box-shadow: 0 4rpx 10rpx rgba(255, 152, 0, 0.5);
}